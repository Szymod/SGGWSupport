<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                    <img src="~/Content/logo.png" width="30" height="30" style="display:inline-block" alt="">
                    <span class="brand-name">SGGW Support</span>
                </a>
            </div>
            <div class="hidden-xs">
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Wyloguj", "Logout", "Authorize", new { area = "" }, new { })</li>
                        <li>@Html.ActionLink("Zmień hasło", "ChangePassword", "Authorize", new { area = "" }, new { })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-lg-2">
                <nav class="navbar navbar-default navbar-fixed-side">
                    <div class="container">
                        <div class="navbar-header">
                            <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
                                <span class="sr-only">Nawigacja</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Administrator <b class="caret"></b></a><ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Użytkownicy", "Index", "Users", new { area = "" }, new { })</li>
                                        <li class="divider"></li>
                                        <li class="dropdown-header">Słowniki</li>
                                        <li><a href="#">Kategorie</a></li>
                                        <li><a href="#">Priorytety</a></li>
                                        <li><a href="#">Statusy</a></li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("Zgłoszenia", "Index", "Ticket", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("Zgłoszenia archiwalne", "Index", "Archival", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("Statystyki", "Index", "Statistics", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("Wyloguj", "Logout", "Authorize", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("Zmień hasło", "ChangePassword", "Authorize", new { area = "" }, new { })</li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="body-content col-sm-9 col-lg-10">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(function () {
            var nav = location.pathname.split("/");
            $('.navbar-fixed-side a[href$="/' + nav[nav.length - 1] + '"]').parent().addClass('active');
        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
