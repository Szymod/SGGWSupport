@model SGGWSupportWeb.Models.TicketViewModel

<div class="bg-blue modal-header modal-head">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title text-center"><b><i>Czy na pewno chcesz usunąć zgłoszenie nr @ViewBag.Id?</i></b></h4>
</div>
<div class="modal-body">
    <dl class="dl-horizontal">




        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TicketAddTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketAddTime)
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Priority)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <hr />

        <dt>
            @Html.DisplayNameFor(model => model.UserData.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserData.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserData.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserData.LastName)
        </dd>

        

        <hr />

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm())

    {

        @Html.AntiForgeryToken()

        <div class="form-group text-right">
            <button type="button" class="btn btn-default" data-dismiss="modal">Wróć</button>
            <input type="submit" value="Usuń" class="btn btn-danger" />
        </div>

    }

</div>





