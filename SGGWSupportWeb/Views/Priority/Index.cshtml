@using SGGWSupportWeb.Models
@model List<PriorityViewModel>

@{
    ViewBag.Title = "Priorytety";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h2>@ViewBag.Title</h2>
        <br /><br />
        <div class="form-group">
            <div class="col-md-1">
                @Html.ActionLink("Dodaj", "Add", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>Nazwa</th>
        <th></th>
    </tr>
    @foreach (var state in Model)
            {
        <tr>
            <td>@state.Name</td>
            <td>
                <div class="pull-right">
                    @Html.ActionLink("Edytuj", "Edit", new { id = state.Id }, new { @class = "ticket-btn btn btn-success" })
                    @Html.ActionLink("Usuń", "Delete", new { id = state.Id }, new { @class = "ticket-btn btn btn-success" })
                </div>
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Powrót", "Index", "Home")
</div>
